<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="stats" class="ch.qos.logback.core.FileAppender">
        <file>stats.log</file>
        <append>false</append>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>%date{HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example" level="debug" additivity="false">
        <appender-ref ref="console"/>
    </logger>

    <logger name="stats" level="info" additivity="false">
        <appender-ref ref="stats"/>
    </logger>

    <logger name="console" level="debug" additivity="false">
        <appender-ref ref="stats"/>
        <appender-ref ref="console"/>
    </logger>
    <shutdownHook/>
</configuration>
